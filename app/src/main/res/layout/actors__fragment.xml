<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.actors_fragments.Actors_Fragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recActors"
        android:layout_width="394dp"
        android:layout_height="528dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="5"
        tools:listitem="@layout/actors_item" />

    <EditText
        android:id="@+id/searchActors"
        android:layout_width="342dp"
        android:layout_height="57dp"
        android:layout_marginStart="5dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Search actor"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/recActors"
        app:layout_constraintStart_toStartOf="@+id/recActors" />

    <ImageView
        android:id="@+id/poiskActor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/searchActors"
        app:layout_constraintStart_toEndOf="@+id/searchActors"
        app:layout_constraintTop_toTopOf="@+id/searchActors"
        app:srcCompat="@android:drawable/ic_search_category_default" />

</androidx.constraintlayout.widget.ConstraintLayout>